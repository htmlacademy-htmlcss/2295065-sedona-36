{
	"name": "sedona",
	"private": true,
	"description": "Личный проект «Sedona» от HTML Academy",
	"devDependencies": {
		"@htmlacademy/editorconfig-cli": "^1.0.0",
		"browser-sync": "^2.27.11",
		"gulp": "^4.0.2",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^9.0.1",
		"gulp-rename": "^2.0.0",
		"gulp-svg-sprite": "^2.0.1",
		"gulp-svgmin": "^4.1.0",
		"gulp-w3c-html-validator": "^5.2.0",
		"postcss": "^8.4.21",
		"postcss-calc": "^8.2.4",
		"postcss-csso": "^6.0.1",
		"postcss-import": "^15.1.0",
		"postcss-preset-env": "^8.0.1",
		"stylelint": "^14.16.1",
		"stylelint-config-firefoxic": "1.0.0"
	},
	"scripts": {
		"lint": "editorconfig-cli && npm run lint:css && gulp validateMarkup --silent",
		"lint:css": "stylelint \"styles/**/*.css\"",
		"build": "gulp compileProject",
		"start": "gulp runDev"
	},
	"browserslist": [
		"last 2 versions",
		"not dead",
		"not op_mini all",
		"not < 0.25%"
	],
	"editorconfig-cli": [
		"*.{json,js,html,css,svg,webmanifest}",
		"icons/**/*.svg",
		"images/**/*.svg",
		"styles/**/*.css",
		"scritps/**/*.js"
	],
	"engines": {
		"node": ">=16"
	},
	"type": "module",
	"volta": {
		"node": "18.14.0"
